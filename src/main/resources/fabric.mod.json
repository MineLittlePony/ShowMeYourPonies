{
  "schemaVersion": 1,
  "id": "smyp",
  "version": "${version}",
  "name": "Show Me Your Ponies",
  "description": "Plugin for Mine Little Pony that add compatibility for the Show Me Your Skin mod",
  "authors": [
    "Sollace"
  ],
  "contact": {
    "homepage": "https://minelittlepony-mod.com/",
    "sources": "https://github.com/MineLittlePony/ShowMeYourPonies",
    "issues": "https://github.com/MineLittlePony/ShowMeYourPonies/issues"
  },
  "license": "MIT",
  "icon": "smyp_logo.png",
  "environment": "client",
  "entrypoints": {
    "minelittlepony": [
      "com.minelittlepony.smyp.Main"
    ]
  },
  "depends": {
    "minecraft": "${minecraftVersion}",
    "fabricloader": "${loaderVersion}",
    "java": ">=17",
    "fabric-api": "${fabricVersion}",
    "showmeyourskin": "${smysVersion}",
    "minelp": "${minelpVersion}"
  },
  "suggests": {
    "modmenu": "*"
  },
  "custom": {
    "modmenu": {
      "links": {
        "modmenu.discord": "https://discord.gg/zKSZ8Mg",
        "modmenu.github_releases": "https://github.com/MineLittlePony/ShowMeYourPonies/releases",
        "modmenu.modrinth": "https://modrinth.com/mod/show-me-your-ponies"
      },
      "parent": "minelp",
      "update_checker": true
    }
  }
}
